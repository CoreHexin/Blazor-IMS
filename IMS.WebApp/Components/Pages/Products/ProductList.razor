@page "/products"

@using IMS.WebApp.Components.Controls
@using IMS.WebApp.Components.Controls.Products

<h3>Product List</h3>

<SearchComponent SearchCallback="OnSearch" />

<ProductListComponent NameForSearch="@nameForSearch" />

<a href="/product/add" class="btn btn-primary">Add Product</a>

@code {
    private string nameForSearch = string.Empty;

    private void OnSearch(string searchFilter)
    {
        nameForSearch = searchFilter;
    }
}
